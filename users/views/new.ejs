<% include partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="text-center col-lg-12">
            <h1>Post a new blog</h1>           
        </div>
        <div class="col-lg-12 text-center">
            <form class="form-group" action="/blogs" method="POST">
                <div class="field">
                    <label>Title</label>
                    <input class="form-control" type="text" name ="blog[title]" placeholder="new campground"></input>   
                </div>
                <div class="field">
                    <label>Image</label>
                    <input class="form-control" type="text" name="blog[image]" placeholder="Image URL"></input>
                </div>
                <div class="field">
                    <label>Description</label>
                    <textarea name="blog[body]"></textarea>
                </div>
                <button class="ui violet inverted big button">Submit</button>
                <a href="/">Back to campgrounds</a>
            </form> 
        </div>
    </div>
</div>
